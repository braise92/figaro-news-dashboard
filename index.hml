<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>üì∞ Dashboard Figaro - Veille Quotidienne</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 900px;
            margin: 0 auto;
            background: white;
            border-radius: 15px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            overflow: hidden;
        }

        .header {
            background: linear-gradient(135deg, #1f1c2c 0%, #928dab 100%);
            color: white;
            padding: 40px 20px;
            text-align: center;
        }

        .header h1 {
            font-size: 2.5em;
            margin-bottom: 10px;
        }

        .header p {
            font-size: 1.1em;
            opacity: 0.9;
        }

        .content {
            padding: 30px 20px;
        }

        .section {
            margin-bottom: 30px;
        }

        .section h2 {
            color: #667eea;
            font-size: 1.5em;
            margin-bottom: 20px;
            border-bottom: 3px solid #667eea;
            padding-bottom: 10px;
        }

        .article {
            background: #f8f9fa;
            padding: 15px;
            margin-bottom: 15px;
            border-radius: 8px;
            border-left: 4px solid #667eea;
            transition: all 0.3s ease;
        }

        .article:hover {
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.1);
            transform: translateX(5px);
        }

        .article h3 {
            margin-bottom: 8px;
        }

        .article h3 a {
            color: #1f1c2c;
            text-decoration: none;
            font-size: 1.1em;
        }

        .article h3 a:hover {
            color: #667eea;
            text-decoration: underline;
        }

        .date {
            color: #999;
            font-size: 0.9em;
            margin-bottom: 8px;
        }

        .resume {
            color: #333;
            line-height: 1.6;
        }

        .loading {
            text-align: center;
            padding: 40px;
            color: #667eea;
            font-size: 1.2em;
        }

        .error {
            background: #fee;
            color: #c33;
            padding: 20px;
            border-radius: 8px;
            margin: 20px;
        }

        .footer {
            background: #f8f9fa;
            padding: 20px;
            text-align: center;
            color: #999;
            font-size: 0.9em;
            border-top: 1px solid #eee;
        }

        @media (max-width: 600px) {
            .header h1 {
                font-size: 1.8em;
            }
            
            .content {
                padding: 15px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>üì∞ Figaro News Dashboard</h1>
            <p>Votre veille quotidienne automatis√©e</p>
        </div>

        <div class="content">
            <div class="section">
                <h2>üì∞ Articles du jour</h2>
                <div id="articles" class="loading">Chargement des articles...</div>
            </div>
        </div>

        <div class="footer">
            <p>Mis √† jour automatiquement chaque matin √† 7h</p>
            <p id="last-update"></p>
        </div>
    </div>

    <script>
        // Charger les articles depuis data.json
        async function loadArticles() {
            try {
                // R√©cup√©rer data.json
                const response = await fetch('https://raw.githubusercontent.com/braise92/figaro-news-dashboard/main/data.json');
                const data = await response.json();

                // V√©rifier s'il y a des articles
                if (!data || !Array.isArray(data) || data.length === 0) {
                    document.getElementById('articles').innerHTML = `
                        <p>‚è≥ En attente de la premi√®re mise √† jour automatique...</p>
                        <p style="font-size: 0.9em; margin-top: 10px;">Le workflow n8n alimentera cette page chaque jour.</p>
                    `;
                } else {
                    // Afficher les articles
                    let html = '';
                    data.forEach(article => {
                        html += `
                            <div class="article">
                                <h3><a href="${article.link || '#'}" target="_blank">${article.title || 'Sans titre'}</a></h3>
                                <p class="date">${article.pubDate || 'Date inconnue'}</p>
                                <p class="resume">${article.summary || 'Pas de r√©sum√© disponible'}</p>
                            </div>
                        `;
                    });
                    document.getElementById('articles').innerHTML = html;
                }

                // Afficher la date de derni√®re mise √† jour
                const now = new Date().toLocaleString('fr-FR');
                document.getElementById('last-update').textContent = `Derni√®re v√©rification: ${now}`;

            } catch (error) {
                console.error('Erreur:', error);
                document.getElementById('articles').innerHTML = `
                    <div class="error">
                        <p>‚ùå Erreur lors du chargement des articles</p>
                        <p style="font-size: 0.9em; margin-top: 10px;">V√©rifiez que data.json est accessible</p>
                    </div>
                `;
            }
        }

        // Charger au d√©marrage
        loadArticles();
        
        // Actualiser toutes les heures
        setInterval(loadArticles, 3600000);
    </script>
</body>
</html>
